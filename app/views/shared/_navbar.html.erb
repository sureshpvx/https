<div class="max-w-9xl border border-orange-200 rounded-2xl text-white mx-auto px-4 sm:px-6 lg:px-8 relative shadow-md backdrop-blur-sm">
  
  <!-- Mobile Toggle -->
  <input id="mobile-toggle" type="checkbox" class="peer hidden">

  <div class="flex items-center justify-between h-16">
    <!-- Logo -->
    <div class="text-2xl font-extrabold tracking-wide">
      <span class="bg-white text-orange-600 px-3 py-1 rounded-xl shadow-sm">MyApp</span>
    </div>

    <!-- Hamburger Icon for Mobile -->
    <label for="mobile-toggle" class="md:hidden flex items-center cursor-pointer relative z-20 hover:scale-105 transition-transform">
      <svg class="w-7 h-7" fill="none" stroke="#000000"
           viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </label>

    <!-- Desktop Menu -->
    <div class="hidden md:flex space-x-6 items-center text-sm font-medium">
      <% if user_signed_in? %>
        <%= button_to destroy_user_session_path,
              method: :delete,
              form: { class: "inline" },
              data: { turbo: false },
              class: "hover:bg-orange-600 bg-orange-500 text-white px-4 py-2 rounded-full shadow-sm transition-all" do %>
          Logout
        <% end %>
      <% else %>
        <%= link_to "Sign In", new_user_session_path, class: "hover:bg-orange-500 px-4 py-2 rounded-lg transition-all duration-200" %>
        <%= link_to "Sign Up", new_user_registration_path, class: "bg-white text-orange-600 font-semibold px-4 py-2 rounded-lg shadow hover:bg-orange-100 transition" %>
      <% end %>
    </div>
  </div>

  <!-- Mobile Dropdown Menu -->
  <div class="peer-checked:flex hidden md:hidden absolute right-4 top-[68px] w-44 flex-col bg-white text-orange-700 rounded-xl shadow-2xl z-10 transition-all duration-300 border border-orange-200">
    <% if user_signed_in? %>
      <%= button_to destroy_user_session_path,
            method: :delete,
            form: { class: "inline" },
            data: { turbo: false },
            class: "block text-left px-4 py-2 hover:bg-orange-100 rounded-t-xl transition" do %>
        Logout
      <% end %>
    <% else %>
      <%= link_to "Sign In", new_user_session_path, class: "block px-4 py-2 hover:bg-orange-100 transition" %>
      <%= link_to "Sign Up", new_user_registration_path, class: "block px-4 py-2 hover:bg-orange-100 rounded-b-xl transition" %>
    <% end %>
  </div>
</div>
