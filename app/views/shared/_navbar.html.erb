        <% else %>
          <%= link_to "Sign In", new_user_session_path, class: "hover:bg-orange-500 px-4 py-2 rounded" %>
          <%= link_to "Sign Up", new_user_registration_path, class: "hover:bg-orange-500 px-4 py-2 rounded" %>
        <% end %>
      </div>
    </div>

    <!-- Mobile Menu -->
    <div class="peer-checked:block hidden md:hidden mt-2 space-y-2 pb-4">
      <% if user_signed_in? %>
        <%= button_to destroy_user_session_path, method: :delete, class: "block text-left px-4 py-2 hover:bg-orange-500 w-full", form: { class: "inline" } do %>
          Logout
        <% end %>
      <% else %>
        <%= link_to "Sign In", new_user_session_path, class: "block px-4 py-2 hover:bg-orange-500" %>
        <%= link_to "Sign Up", new_user_registration_path, class: "block px-4 py-2 hover:bg-orange-500" %>
      <% end %>
    </div>
  </div>
